{
  "name": "@automechanica/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:test": "tsx src/scripts/test-db-connection.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "migrate": "node-pg-migrate -c ./db/pg-migrate.config.cjs up",
    "migrate:down": "node-pg-migrate -c ./db/pg-migrate.config.cjs down",
    "migrate:reset": "node-pg-migrate -c ./db/pg-migrate.config.cjs down && node-pg-migrate -c ./db/pg-migrate.config.cjs up",
    "migrate:status": "node-pg-migrate -c ./db/pg-migrate.config.cjs status"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "zod": "^3.23.8",
    "express-rate-limit": "^8.2.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^7.8.1",
    "@typescript-eslint/parser": "^7.8.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "node-pg-migrate": "^8.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "tsx": "^4.7.2",
    "typescript": "5.5.4",
    "vitest": "^1.5.0"
  }
}
