# AutoMechanica environment template
# Copy this file to .env and update values for your environment.

# Runtime
NODE_ENV=development
PORT=3001
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
SLOW_QUERY_THRESHOLD_MS=300
API_RATE_LIMIT_PER_MINUTE=500

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://automechanica:dev_password@localhost:5432/automechanica
POSTGRES_USER=automechanica
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=automechanica
POSTGRES_PORT=5432

# Optional pgAdmin UI
PGADMIN_DEFAULT_EMAIL=admin@automechanica.local
PGADMIN_DEFAULT_PASSWORD=changeme
PGADMIN_PORT=5050

# LLM configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-large
TASK_POLL_INTERVAL_MS=5000
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT_MS=300000
VECTOR_DIMENSIONS=3072
VECTOR_SIMILARITY_THRESHOLD=0.7
MEMORY_BACKEND=pgvector
QDRANT_URL=
QDRANT_API_KEY=

# Provider credentials (set only when enabled)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
